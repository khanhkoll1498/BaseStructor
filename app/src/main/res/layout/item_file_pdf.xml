<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_6sdp"
    android:padding="4dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_item_8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/round_corner_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/txt_image_to_pdf"
        android:textColor="@color/color_font_poppins"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintStart_toEndOf="@id/cv_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_stt"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_12sdp"
        android:background="@drawable/round_corner_4dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:foregroundGravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@id/tv_info"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="04/25/2020 16:25"
        app:layout_constraintStart_toEndOf="@id/tv_stt"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:fontFamily="@font/poppins_regular"
        android:text="222.3KB"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>